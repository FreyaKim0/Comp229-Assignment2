<!DOCTYPE html>
<html>

  <head>
    <title> <%= title %> </title>
    <!--CSS section-->
    <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' /> 
    <link rel='stylesheet' href='/content/app.css' />
    <link rel='stylesheet' href='/content/full-width.css' />
    <link rel='stylesheet' href='/content/contact.css' /> 
    <link rel='icon' type= 'image/x-icon' href ='/assets/images/favicon.ico'>
  </head>

  <body>
  <!--Partial:header-->
  <%- include('../partials/header.ejs') %>
    
  <!--Partial:content and footer-->
  <div id="main" class="main_wrapper">
       
    <div id="grid_placeholder" class="main_grid_constraint">
    </div> 
    
    <div id="content_in_main_wrapper" class="main_grid_constraint">  
    <%- include('../partials/content.ejs') %>

<!----------------------->
<!------page content----->
<!----------------------->
<main class="container">
    <!--Message Area-->
    <% if(messages.length>0) {%>
       <div class="alter alter-danger">
           <%=messages%>
       </div>        
    <%} %>
    
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Please Register</h1>
              <form method="POST" autocomplete="off">
    
                   <fieldset class="form-group">
                       <label for="username">username:
                       </label>
                       <input type="text" class="form-control"
                       name="username" placeholder="Enter username" id="username" required autofocus>
                    </fieldset>
    
                    <fieldset class="form-group">
                        <label for="password">password:
                        </label>
                        <input type="password" class="form-control"
                        name="password" placeholder="Enter password" id="password" required>
                        or
                        <a href="/register">Register Here</a>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="email">Email:
                        </label>
                        <input type="email" class="form-control"
                        name="email" placeholder="Enter email" id="email" required>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="displayName">display name:
                        </label>
                        <input type="text" class="form-control"
                        name="displayName" placeholder="Enter display name" id="displayName" required>
                    </fieldset>
    
                    <fieldset class="form-group text-right">
                        <input type="submit" class="btn btn-success" value="Register">
                        <a href="/" class="btn btn-warning">
                          <input type="button" value="cancel" class="btn btn-warning">
                        </a>
                    </fieldset>
            </form>
        </div>
    </div>
    </main>    
<!----------------------->
<!------page finish----->
<!----------------------->


  <%- include('../partials/footer.ejs') %>
  </div>
  </div> 
  
  <!--JS section-->
  <script src='/jquery/dist/jquery.min.js'></script> <!--Jquery must before bootstrap for popover-->  
  <script src='/scripts/app.js'></script>
  <script src='/scripts/nav.js'></script>
  <script src='/popper.js/dist/umd/popper.min.js'></script>
  <script src='/bootstrap/dist/js/bootstrap.min.js'></script>
  </body>

</html>




 