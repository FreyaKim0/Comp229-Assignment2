<!DOCTYPE html>
<html>

  <head>
    <title> <%= title %> </title>
    <!--CSS section-->
    <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' /> 
    <link rel='stylesheet' href='/content/app.css' />
    <link rel='stylesheet' href='/content/full-width.css' />
    <link rel='stylesheet' href='/content/login.css' /> 
    <link rel='icon' type= 'image/x-icon' href ='/assets/images/favicon.ico'>
  </head>

  <body>
  <!--Partial:header-->
  <%- include('../partials/header.ejs') %>
    
  <!--Partial:content and footer-->
  <div id="main" class="main_wrapper">
       
    <div id="grid_placeholder" class="main_grid_constraint">
    </div> 
    
    <div id="content_in_main_wrapper" class="main_grid_constraint">  
      <!----------------------->
      <!------page content----->
      <!----------------------->
      <div class="limiter">
        <div class="main_wrap">



              <!--Login block--> 
          <div id="block_wrap">
              <form method="POST" autocomplete="off">
              <span class="account_login">
              <!--Authenicain error-->
              <% if(messages.length>0) {%>
                  <div class="au_error">
                    *<%=messages%>*
                  </div>        
              <%} %>

                ACCOUNT LOGIN
              </span><br><br>

              <span class="field_name">
                USERNAME
              </span>

              <div class="wrap-input100 validate-input m-b-36" data-validate = "Username is required">                
                <!--username input-->
                <input id="username" class="input100" type="text" name="username" required>
                <span class="focus-input100"></span>
              </div>
              
              <span class="field_name">
                PASSWORD
              </span>
              <div class="wrap-input100 validate-input m-b-12" data-validate = "Password is required">

                <span class="btn-show-pass">
                  <i class="fa fa-eye"></i>
                </span>
                <!--password input-->
                <input id="password" class="input100" type="password" name="password" >
                <span class="focus-input100"></span>
              </div>
              <span class="forget">Forget password?</span>
              <span class="register">
              <a href="/register">Register</a>
              </span>

              <div class="container-login100-form-btn">
                <!--submit button-->
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="submit" class="login100-form-btn" value="Login">
                <!--cancel button-->
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="/">   
                <input type="button" value="Cancel" class="login100-form-btn">
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!----------------------->
      <!--content finished----->
      <!----------------------->


  </div>
  </div> 
  
  <!--JS section-->
  <script src='/jquery/dist/jquery.min.js'></script> <!--Jquery must before bootstrap for popover-->  
  <script src='/scripts/app.js'></script>
  <script src='/scripts/nav.js'></script>
  <script src='/popper.js/dist/umd/popper.min.js'></script>
  <script src='/bootstrap/dist/js/bootstrap.min.js'></script>
  </body>

</html>