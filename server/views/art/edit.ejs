<!DOCTYPE html>
<html>

  <head>
    <title> <%= title %> </title>
    <!--CSS section-->
    <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' /> 
    <link rel='stylesheet' href='/content/app.css' />
    <link rel='stylesheet' href='/content/full-width.css' />
    <link rel='stylesheet' href='/content/contact.css' /> 
    <link rel='icon' type= 'image/x-icon' href ='/assets/images/favicon.ico'>
  </head>

  <body>
  <!--Partial:header-->
  <%- include('../partials/header.ejs') %>
    
  <!--Partial:content and footer-->
  <div id="main" class="main_wrapper">
       
    <div id="grid_placeholder" class="main_grid_constraint">
    </div> 
    
    <div id="content_in_main_wrapper" class="main_grid_constraint">  
    <%- include('../partials/content.ejs') %>

<!----------------------->
<!------page content----->
<!----------------------->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the name of the book title"
                name="name" 
                value="<%=book.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the name of the book's author"
                name="author" 
                value="<%=book.author %>"
                required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control"
                id="publishedTextField"
                placeholder="Enter the Year of the publication"
                name="published" 
                value="<%=book.published %>"
                required>
            </div>
    
            <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control"
                id="descriptionTextArea"
                placeholder="Enter the description"
                name="description" 
                value=""
                required><%=book.description %></textarea>
            </div>
            <button class="btn btn-primary">
              <i class="fas fa-edit"></i> Submit
            </button>

            <a href=".book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
        </form>
     </div>
    </div>
</div>
<!----------------------->
<!------page finish----->
<!----------------------->


  <%- include('../partials/footer.ejs') %>
  </div>
  </div> 
  
  <!--JS section-->
  <script src='/jquery/dist/jquery.min.js'></script> <!--Jquery must before bootstrap for popover-->  
  <script src='/scripts/app.js'></script>
  <script src='/scripts/nav.js'></script>
  <script src='/popper.js/dist/umd/popper.min.js'></script>
  <script src='/bootstrap/dist/js/bootstrap.min.js'></script>
  </body>

</html>
